<!doctype html>
<html lang="en">
    <head>
        
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        
        <title><%= title %></title>
    </head>
    <body>
        <div class="container">
            <h1 class="text-center mt-3 mb-3"><%= title %></h1>
            
                        <div class="card">
                <div class="card-header">
                    <div class="row">
                        
                        
                    </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <tr>
                                <th>List Name</th>
                            </tr>
                            
                            <%if(data.length > 0)
                            {
                                data.forEach(function(d){
                            %>
                            <tr>
                                
                                <td> <a href="/list_detail?p_id=<%= d.proj_id %>&s_id=<%= d.sprint_id %>&b_id=<%= d.board_id %>&l_id=<%= d.list_id %>"> <%= d.list_title %> </a></td>
                            </tr>
                            <%
                                });
                            }
                            else
                            {
                            %>
                            <tr>
                                <td colspan="5">No Data Found</td>
                            </tr>
                            <%
                            }
                            %>
                        </table>
                    </div>
                </div>
            </div>

            <a href="/create_list?p_id=<%= p_id %> &s_id=<%= s_id %>&b_id=<%= b_id %>"> <button>Create New Lists</button> </a>

        </div> 

        
    </body>
</html>